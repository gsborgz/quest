{
  "name": "quest",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "Gabriel da Silva Borges",
  "license": "MIT",
  "scripts": {
    "dev": "npm run services:up && next dev",
    "postinstall": "prisma generate",
    "services:up": "docker compose up -d",
    "services:stop": "docker compose stop",
    "services:down": "docker compose down",
    "build": "next build",
    "start": "next start",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "frontend:test": "jest --config ./jest-front.config.ts",
    "frontend:test:w": "jest --config ./jest-front.config.ts --watchAll --runInBand",
    "backend:test": "jest --config ./jest-back.config.ts",
    "backend:test:w": "jest --config ./jest-back.config.ts --watchAll --runInBand",
    "migration:new": "dotenv -e .env.development -- prisma migrate dev --name",
    "migration:run:dev": "dotenv -e .env.development -- prisma migrate deploy",
    "migration:run": "prisma migrate deploy"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^5.11.0",
    "@prisma/client": "^5.11.0",
    "next": "^14.1.3",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.11.4",
    "autoprefixer": "^10.4.18",
    "dotenv-cli": "^7.4.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prisma": "^5.11.0",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  },
  "keywords": []
}
